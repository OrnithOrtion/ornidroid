<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">

	<ImageView android:id="@+id/home_image" android:layout_width="fill_parent"
		android:layout_height="200sp" android:src="@drawable/oiseauweb"
		android:scaleType="fitCenter" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="25sp">
		<TextView android:text="****" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="25sp"
			android:gravity="center_horizontal" />
	</LinearLayout>

	<TextView android:id="@+id/menu_search" android:text="@string/menu_search"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="20sp" android:paddingLeft="20sp" />

	<TextView android:id="@+id/menu_search_multi" android:text="@string/menu_search_multi"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="20sp" android:paddingLeft="20sp" android:paddingTop="25sp"
		android:textColor="#CCC" />

	<TextView android:id="@+id/menu_about" android:text="@string/menu_about"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="20sp" android:paddingLeft="20sp" android:paddingTop="25sp" />


</LinearLayout>


