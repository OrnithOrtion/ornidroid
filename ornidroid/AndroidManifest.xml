<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ornidroid"
    android:installLocation="auto"
    android:versionCode="20"
    android:versionName="10.0.1-SNAPSHOT" >
    <!-- ANDROID DEBUGGABLE !! -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />
<!-- ANDROID DEBUGGABLE !! -->
    <application android:debuggable="false"
        android:icon="@drawable/ic_ornidroid"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The default activity of the app; displays search results. -->
        <activity android:name=".ui.MainActivity" />


        <!-- Preferences activity -->
        <activity
            android:name=".ui.preferences.OrnidroidPreferenceActivity"
            android:label="@string/preferences"
            android:noHistory="true" />
        <!-- about activity -->
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/help" />
        <activity
            android:name=".ui.NewBirdActivity"
            android:label="@string/bird_info" />

        <!-- full size image activity -->
        <activity
            android:name=".ui.ScrollableImageActivity"
            android:label="@string/bird_image_big"
            android:noHistory="true" />
      
        <activity
            android:name=".ui.multicriteriasearch.MultiCriteriaSearchActivity"
            android:label="@string/menu_search_multi" />
        <activity
            android:name=".ui.AddCustomMediaActivity"
            android:label="@string/add_custom_media_title" />

      

        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.MainActivity" />
    </application>

</manifest>