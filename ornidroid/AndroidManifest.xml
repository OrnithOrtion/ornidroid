<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ornidroid"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_ornidroid"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.HomeActivity"
            android:theme="@android:style/Theme.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The default activity of the app; displays search results. -->
        <activity
            android:name=".ui.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar" >

            <!-- Receives the search request. -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- No category needed, because the Intent will specify this class component -->
            </intent-filter>

            <!-- Points to searchable meta data. -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Preferences activity -->
        <activity
            android:name=".ui.OrnidroidPreferenceActivity"
            android:label="@string/preferences"
            android:noHistory="true" />
        <!-- about activity -->
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about"
            android:noHistory="true" />

        <!-- full size image activity -->
        <activity
            android:name=".ui.FullSizeImageActivity"
            android:label="@string/bird_image_big"
            android:noHistory="true" />

 
        <activity
            android:name=".ui.BirdActivity"
            android:label="@string/bird_info"
        
            android:theme="@android:style/Theme.NoTitleBar" />

       

        <!-- Provides search suggestions for words and their definitions. -->
        <provider
            android:name=".data.DictionaryProvider"
            android:authorities="fr.ornidroid.data.DictionaryProvider" />

        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.MainActivity" />
    </application>

</manifest>